                },
                {
                  "key": "email",
                  "value": "updated@example.com",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            }
          }
        },
        {
          "name": "Access Products (Protected)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "{{session_cookie}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/products",
              "host": ["{{base_url}}"],
              "path": ["products"]
            }
          }
        },
        {
          "name": "Access Suppliers (Protected)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "{{session_cookie}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/suppliers",
              "host": ["{{base_url}}"],
              "path": ["suppliers"]
            }
          }
        }
      ]
    },
    {
      "name": "Test Unauthorized Access",
      "item": [
        {
          "name": "Access Dashboard Without Auth",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/dashboard",
              "host": ["{{base_url}}"],
              "path": ["dashboard"]
            }
          }
        },
        {
          "name": "Access Session Info Without Auth",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/session/info",
              "host": ["{{base_url}}"],
              "path": ["session", "info"]
            }
          }
        }
      ]
    }
  ]
}
