<%- include('../partials/header') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card">
        <div class="card-header text-center">
          <h4>Login</h4>
        </div>
        <div class="card-body">
          <!-- Display flash messages -->
          <% if (error && error.length > 0) { %>
            <div class="alert alert-danger">
              <%= error %>
            </div>
          <% } %>
          
          <% if (success && success.length > 0) { %>
            <div class="alert alert-success">
              <%= success %>
            </div>
          <% } %>

          <!-- Logout message from cookie -->
          <div id="logout-message"></div>

          <form action="/auth/login" method="POST">
            <div class="form-group mb-3">
              <label for="identifier">Username or Email</label>
              <input 
                type="text" 
                class="form-control" 
                id="identifier" 
                name="identifier" 
                value="<%= oldInput.identifier || '' %>"
                required
                placeholder="Enter username or email"
              >
            </div>
            
            <div class="form-group mb-3">
              <label for="password">Password</label>
              <input 
                type="password" 
                class="form-control" 
                id="password" 
                name="password" 
                required
                placeholder="Enter password"
              >
            </div>
            
            <div class="form-check mb-3">
              <input 
                type="checkbox" 
                class="form-check-input" 
                id="rememberMe" 
                name="rememberMe"
                <%= oldInput.rememberMe ? 'checked' : '' %>
              >
              <label class="form-check-label" for="rememberMe">
                Remember me (30 days)
              </label>
            </div>
            
            <button type="submit" class="btn btn-primary w-100">Login</button>
          </form>
          
          <div class="text-center mt-3">
            <p>Don't have an account? <a href="/auth/register">Register here</a></p>
          </div>
        </div>
      </div>
      
      <!-- Demo Accounts -->
      <div class="card mt-3">
        <div class="card-header">
          <h6>Demo Accounts</h6>
        </div>
        <div class="card-body">
          <small class="text-muted">
            <strong>Test User:</strong><br>
            Username: testuser<br>
            Password: test123
          </small>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Check for logout message cookie and display it
document.addEventListener('DOMContentLoaded', function() {
  const logoutMessage = getCookie('logoutMessage');
  if (logoutMessage) {
    const messageDiv = document.getElementById('logout-message');
    messageDiv.innerHTML = '<div class="alert alert-success">' + logoutMessage + '</div>';
    
    // Delete the cookie after displaying
    document.cookie = 'logoutMessage=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
    
    // Hide message after 5 seconds
    setTimeout(() => {
      messageDiv.innerHTML = '';
    }, 5000);
  }
});

function getCookie(name) {
  const value = "; " + document.cookie;
  const parts = value.split("; " + name + "=");
  if (parts.length === 2) return parts.pop().split(";").shift();
}
</script>

<%- include('../partials/footer') %>
