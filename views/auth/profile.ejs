<%- include('../partials/header') %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Profile Header -->
      <div class="card mb-4">
        <div class="card-header">
          <h4>User Profile</h4>
        </div>
        <div class="card-body">
          <!-- Flash Messages -->
          <% if (error && error.length > 0) { %>
            <div class="alert alert-danger">
              <%= error %>
            </div>
          <% } %>
          
          <% if (success && success.length > 0) { %>
            <div class="alert alert-success">
              <%= success %>
            </div>
          <% } %>

          <!-- Profile Information -->
          <div class="row mb-4">
            <div class="col-md-4">
              <div class="text-center">
                <div class="avatar-placeholder bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" 
                     style="width: 100px; height: 100px; font-size: 2rem;">
                  <%= user.fullName.charAt(0).toUpperCase() %>
                </div>
                <h5 class="mt-3"><%= user.fullName %></h5>
                <span class="badge bg-<%= user.role === 'admin' ? 'danger' : 'secondary' %>"><%= user.role %></span>
              </div>
            </div>
            <div class="col-md-8">
              <table class="table">
                <tr>
                  <th width="30%">Username:</th>
                  <td><%= user.username %></td>
                </tr>
                <tr>
                  <th>Email:</th>
                  <td><%= user.email %></td>
                </tr>
                <tr>
                  <th>Member Since:</th>
                  <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                </tr>
                <tr>
                  <th>Last Login:</th>
                  <td><%= user.lastLogin ? new Date(user.lastLogin).toLocaleString() : 'Never' %></td>
                </tr>
                <tr>
                  <th>Account Status:</th>
                  <td>
                    <span class="badge bg-<%= user.isActive ? 'success' : 'danger' %>">
                      <%= user.isActive ? 'Active' : 'Inactive' %>
                    </span>
                  </td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- Edit Profile Form -->
      <div class="card">
        <div class="card-header">
          <h5>Edit Profile</h5>
        </div>
        <div class="card-body">
          <form action="/auth/profile" method="POST">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="fullName">Full Name</label>
                  <input 
                    type="text" 
                    class="form-control" 
                    id="fullName" 
                    name="fullName" 
                    value="<%= oldInput.fullName || user.fullName %>"
                    required
                    placeholder="Enter your full name"
                  >
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="email">Email</label>
                  <input 
                    type="email" 
                    class="form-control" 
                    id="email" 
                    name="email" 
                    value="<%= oldInput.email || user.email %>"
                    required
                    placeholder="Enter your email"
                  >
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="username">Username</label>
                  <input 
                    type="text" 
                    class="form-control" 
                    id="username" 
                    name="username" 
                    value="<%= user.username %>"
                    disabled
                    title="Username cannot be changed"
                  >
                  <small class="form-text text-muted">Username cannot be changed</small>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group mb-3">
                  <label for="role">Role</label>
                  <input 
                    type="text" 
                    class="form-control" 
                    id="role" 
                    name="role" 
                    value="<%= user.role %>"
                    disabled
                    title="Role can only be changed by admin"
                  >
                  <small class="form-text text-muted">Role can only be changed by admin</small>
                </div>
              </div>
            </div>

            <div class="d-flex justify-content-between">
              <div>
                <button type="submit" class="btn btn-primary">Update Profile</button>
                <a href="/dashboard" class="btn btn-secondary">Cancel</a>
              </div>
              <div>
                <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                  Change Password
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <!-- Account Actions -->
      <div class="card mt-4">
        <div class="card-header">
          <h5>Account Actions</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h6>Session Management</h6>
              <p class="text-muted">Manage your current session and login status.</p>
              <a href="/auth/logout" class="btn btn-outline-danger">Logout</a>
            </div>
            <div class="col-md-6">
              <h6>Navigation</h6>
              <p class="text-muted">Go back to the main application areas.</p>
              <a href="/dashboard" class="btn btn-outline-primary">Dashboard</a>
              <a href="/products" class="btn btn-outline-info">Products</a>
              <a href="/suppliers" class="btn btn-outline-warning">Suppliers</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Change Password Modal -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="changePasswordModalLabel">Change Password</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p class="text-muted">Password change functionality would be implemented here with additional security measures:</p>
        <ul class="text-muted">
          <li>Current password verification</li>
          <li>New password confirmation</li>
          <li>Password strength validation</li>
          <li>Email notification of password change</li>
        </ul>
        <div class="alert alert-info">
          <strong>Note:</strong> This is a demo application. In production, password changes should require current password verification and additional security measures.
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" disabled>Change Password (Demo)</button>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
